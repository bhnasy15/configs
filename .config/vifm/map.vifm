map ,w <C-w>

nnoremap s :!sh -c '[ -v WAYLAND_DISPLAY ] && foot -D %d -T SCRIPT || $TERM --working-directory %d -T SCRIPT' &<cr>

nnoremap H :histprev<cr>
nnoremap L :histnext<cr>

nnoremap w :view<cr>
vnoremap w :view<cr>gv

nnoremap O :!nv_s %f <cr>
nnoremap o :!$EDITOR %f<cr>

nnoremap gb :file &<cr>l

nnoremap yp :![ -v WAYLAND_DISPLAY ] && echo %c:p | wl-copy || echo %c:p | xclip -sel clip -i <cr>

nnoremap ,W :set wrap!<cr>

nnoremap <c-s> :sync<cr>

nnoremap ,q :quit<cr>
nnoremap qq :quit<cr>

nnoremap ,g :grep -i -e<space>
nnoremap ,f :find ./ -iname<space>

nnoremap ,t :tabnew<cr>

nnoremap v :select<cr>
